<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- Log Target: File and Console -->
	<targets>
		<!-- Use double backslashes or forward slashes to avoid path errors -->
		<target xsi:type="File" name="file" fileName="M:\C#PRoject\GreetingApp\HelloGreetingApplication\HelloGreetingApplication\Log\app.log"
		        layout="${longdate} | ${level} | ${message} ${exception:format=tostring}" />
		<target xsi:type="Console" name="console"
		        layout="${longdate} | ${level} | ${message} ${exception:format=tostring}" />
	</targets>

	<!-- Log Rules -->
	<rules>
		<logger name="*" minlevel="Info" writeTo="file,console" />
	</rules>

</nlog>
